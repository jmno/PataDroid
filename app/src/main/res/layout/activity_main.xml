<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="pt.pata.patadroid.MainActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Main_NomeTerapeuta"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:fillViewport="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Main_Lista_Pacientes"
                android:text="Lista Pacientes"
                android:textStyle="bold|italic"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_marginBottom="25dp"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_listapacientes"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/novoPaciente"
                android:id="@+id/textView_Main_Novo_Paciente"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold|italic"
                android:layout_marginBottom="25dp"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_addpaciente"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Main_ListaSintomas"
                android:text="@string/listaSintomas"
                android:textStyle="bold|italic"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_marginBottom="25dp"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_listasintomas"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Main_NovoEpisodioClinico"
                android:textStyle="bold|italic"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_marginBottom="25dp"
                android:text="@string/novoEpisodioClinico"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_newblack"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Main_Logout"
                android:textStyle="bold|italic"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:gravity="center_horizontal|center_vertical"
                android:drawableLeft="@drawable/ic_logout"
                android:text="Logout" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
